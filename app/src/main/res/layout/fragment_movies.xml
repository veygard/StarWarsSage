<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.fragments.MoviesFragment">

    <Button
            android:text="Movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_movies"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_movies"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:text="Planet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_planet"
            app:layout_constraintStart_toEndOf="@+id/button_movies"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_person" />

    <Button
            android:text="Person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_person"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>