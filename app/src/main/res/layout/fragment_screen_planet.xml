<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.screens.PlanetScreenFragment">


    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_rawRes="@raw/loading"
            tools:context=".ui.screen.SplashScreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:visibility="invisible"
            android:id="@+id/planet_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0"
            android:shrinkColumns="*">

        <TableRow
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:textStyle="bold"
                    android:text="@string/planet_rotation_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="start|center_vertical"
                    android:id="@+id/planet_rotation_period" />
        </TableRow>

        <TableRow
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:textStyle="bold"
                    android:text="@string/planet_orbital_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="start|center_vertical"
                    android:id="@+id/planet_orbital_period" />
        </TableRow>

        <TableRow
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:textStyle="bold"
                    android:text="@string/planet_diameter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="start|center_vertical"
                    android:id="@+id/planet_diameter" />
        </TableRow>

        <TableRow
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:textStyle="bold"
                    android:text="@string/planet_gravity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="start|center_vertical"
                    android:id="@+id/planet_gravity" />
        </TableRow>

        <TableRow
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:textStyle="bold"
                    android:text="@string/planet_terrain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="start|center_vertical"
                    android:id="@+id/planet_terrain" />
        </TableRow>

        <TableRow
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:textStyle="bold"
                    android:text="@string/planet_population"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="start|center_vertical"
                    android:id="@+id/planet_population" />
        </TableRow>

        <TableRow
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:textStyle="bold"
                    android:layout_gravity="start|center"
                    android:text="@string/planet_climate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="start|center_vertical"
                    android:id="@+id/planet_climate" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>